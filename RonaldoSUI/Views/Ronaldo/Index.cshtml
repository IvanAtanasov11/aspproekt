    <input type="number" id="num1" class="form-control mb-2" placeholder="–ß–∏—Å–ª–æ 1" />
    <input type="number" id="num2" class="form-control mb-3" placeholder="–ß–∏—Å–ª–æ 2" />
    <div class="btn-group mb-3" style="width: 100%;">
        <button class="btn btn-success" onclick="calculate('+')">+</button>
