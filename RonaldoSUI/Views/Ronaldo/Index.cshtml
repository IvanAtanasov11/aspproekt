@model GrigorDimitrovProfile.Models.Athlete
@{
    ViewData["Title"] = "Кристиано Роналдо";
}

<!-- Хедър снимка със заглавие -->
<div style="position: relative; height: 300px; overflow: hidden; margin-bottom: 20px;">
    <img src="https://upload.wikimedia.org/wikipedia/commons/8/8c/Cristiano_Ronaldo_2018.jpg"
         alt="Cristiano Ronaldo"
         style="width: 100%; object-fit: cover; filter: brightness(80%);">
    <h1 style="position: absolute; bottom: 20px; left: 30px; color: white; font-size: 2.5em;">
        @Model.Name
    </h1>
</div>

<!-- Основна информация -->
<div style="padding: 20px;">
    <p><strong>Спорт:</strong> @Model.Sport</p>
    <p><strong>Държава:</strong> @Model.Country</p>
    <p><strong>Ранг:</strong> @Model.Ranking</p>
    <p><strong>Биография:</strong> @Model.Biography</p>

    <a href="/Ronaldo/Details" class="btn btn-primary mt-3">Виж подробности (само за логнати)</a>
</div>
